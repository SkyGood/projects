@CHARSET "UTF-8";
html,body,ul,li,a,span,p{
	margin: 0px;
	padding: 0px;
	list-style-type: none;
	text-decoration: none;
	color: #333;
}
.sh-system-header{
	width: 100%;
	height: 80px;
	background-image: url(../img/system_header.png);
}
.sh-system-header h3{
	font-size: 28px;
	float: left;
	color: white;
	margin:20px 0px 0px 40px;
}
.sh-system-header span{
	float: right;
	margin: 40px 60px 0px 0px;
	height: 30px;
	line-height: 30px;
	font-weight: bolder;
	font-size: 20px;
	color:white;
}
.sh-system-header span a{
	height: 100%;
	font-size: 16px;
}