<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>班级列表</title>
</head>
<body>
	<form action="http://localhost:8080/sh/system/adminclass/allclass" method="post">
		班级名称<input type="text" name="className" value="">
		<input type="submit" value="提交">
	</form>
	<table>	
		<tr>
			<th> 
				班级名称
			</th>
			<th> 
				班级人数
			</th>
			<!-- <th>
				管理员ID
			</th> -->
			<th> 
				管理员
			</th>
			<th>
				操作
			</th>
			<th>
				操作
			</th>
		</tr>
		<c:forEach var="adminClass" items="${requestScope.pageModel.list}">
			<tr>
				<td>${adminClass.adminClassName}</td>
				<td>${adminClass.adminClassNum}</td>
				<%-- <td>${ adminClass.admin.administratorId!=0 ? adminClass.admin.administratorId : "<a href='http://localhost:8080/sh/system/administrator/add'>添加管理员</a>"}</td> --%>
				<td>${!empty adminClass.admin.administratorName ? adminClass.admin.administratorName : "<a href='http://localhost:8080/sh/system/administrator/add'>添加管理员</a>"}</td>
				<td><a href="http://localhost:8080/sh/system/student/add">添加学生</a></td>
				<td><a href="http://localhost:8080/sh/system/classmanage/${adminClass.adminClassId}">管理班级</a></td>
			</tr>
		</c:forEach>
	</table>
	<c:import url="/WEB-INF/common/page.jsp" />
</body>
</html>