@CHARSET "UTF-8";
.add{
	height: 260px;
	width: 300px;
	position: absolute;
	top: 120px;
	left: 40%;
}
#error{
	position: absolute;
	width: 140px;
	height: 30px;
	top:50px;
	left: 42%;
	background: #fafafa;
	color: red;
	text-align: center;
	display: none;
}
#addstudent{
	display: none;
}
#addadmin{
	display: none;
}

.add form{
	background: #fafafa;
	height: 100%;
	width: 100%;
}
.add form label {
	text-align: center;
	display:inline-block;
	width: 100%;
	height: 50px;
	line-height: 50px;
	font-size: 24px;
	background: #ccc;
	color: #fff;
	font-weight: bolder;
}
.add form p{
	float: right;
	padding: 0px;
	cursor: pointer;
	height: 30px;
	width: 30px;
	margin: 10px 4px 0px 0px;
}
.add form span{
	float: left;
	width: 100%;
	height: 40px;
	line-height: 40px;
	font-size: 20px;
	margin-top: 8px;
	text-indent: 4px;
}
.add span input{
	height: 26px;
	float: right;
	margin: 6px 16px 0px 0px ;
}
.add span:last-child input{
	cursor:pointer;
	width: 80px;
	border: none;
	color: white;
	background-color: #5cb85c;
	background-image: -webkit-gradient(linear,left top,left bottom,from(#5cb85c),to(#3d8b5f));
}